<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="WordDAO">

	<insert id="insertWord" parameterType="word">
		<![CDATA[
			INSERT INTO WORD(ENG, KOR, CLEAR)
			VALUES(#{eng}, #{kor}, 0)
		]]>
	</insert>
	
	<select id="getWordList" resultType="word">
		<![CDATA[
			SELECT * FROM WORD
		]]>
	</select>
	
	<select id="getWordListOfAll50" resultType="word">
		<![CDATA[
			SELECT * FROM WORD ORDER BY RAND() LIMIT 50
		]]>
	</select>
	
	<select id="getRandomWord" resultType="word">
		<![CDATA[
			SELECT * FROM WORD ORDER BY RAND() LIMIT 1
		]]>
	</select>
</mapper>